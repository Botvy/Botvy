{
    "$schema": "https://raw.githubusercontent.com/Packagaya/Packagaya/master/packages/libs/config/src/ConfigSchema.json",
    "apps": ["./packages/apps"],
    "libs": ["./packages/libs"],
    "adapters": ["@packagaya/ts-adapter"],
    "features": [
        [
            "sync-ts-deps",
            {
                "installAlwaysLatestVersion": false,
                "blacklist": ["jest", "ts-jest", "rimraf"]
            }
        ],
        "sync-ts-paths"
    ]
}
