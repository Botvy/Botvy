{
    "$schema": "https://raw.githubusercontent.com/Packagaya/Packagaya/develop/packages/libs/config/src/ConfigSchema.json",
    "apps": ["./packages/apps"],
    "libs": [],
    "adapters": ["@packagaya/ts-adapter"],
    "features": [
        [
            "sync-ts-deps",
            {
                "installAlwaysLatestVersion": false,
                "blacklist": [
                    "jest",
                    "ts-jest",
                    "rimraf",
                    "@types/inquirer",
                    "@types/diff",
                    "@types/glob",
                    "babylon",
                    "inquirer-autocomplete-prompt"
                ]
            }
        ],
        "sync-ts-paths"
    ]
}
